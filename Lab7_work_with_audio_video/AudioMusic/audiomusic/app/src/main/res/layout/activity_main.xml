<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:contentDescription="Elan img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="ElanPlay"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageButton3"
        app:srcCompat="@drawable/elan" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:contentDescription="Ganyou img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="GanYouPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:srcCompat="@drawable/ganyou" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="Raiden img"
        android:onClick="RaidenPlay"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5"
        app:layout_constraintEnd_toStartOf="@id/imageButton4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:srcCompat="@drawable/raiden_shogun" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:contentDescription="Kondakia img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="KondakiaPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageButton3"
        app:layout_constraintTop_toBottomOf="@id/imageButton2"
        app:layout_constraintBottom_toTopOf="@+id/imageButton6"
        app:srcCompat="@drawable/kondkia" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:contentDescription="Mona img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="MonaPlay"
        app:layout_constraintEnd_toStartOf="@+id/imageButton6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/mona"

        />

    <ImageButton
        android:id="@+id/imageButton6"
        android:contentDescription="Shenhe img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="ShenshePlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/shenhe" />


</androidx.constraintlayout.widget.ConstraintLayout>